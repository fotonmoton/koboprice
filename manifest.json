{
  "name": "Kobo Price",
  "description": "Find lowest book price on kobo.com",
  "version": "1.1.4",
  "manifest_version": 3,
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "js": ["dist/koboprice.js"],
      "run_at": "document_end",
      "matches": [
        "https://www.kobo.com/*/*/ebook/*",
        "https://www.kobo.com/*/*/audiobook/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "koboprice@tertyshny.dev"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
 
}
