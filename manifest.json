{
  "name": "Kobo Price",
  "description": "Find lowest book price on kobo.com",
  "version": "1.1.1",
  "manifest_version": 3,
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "js": ["dist/index.js"],
      "run_at": "document_end",
      "matches": [
        "https://www.kobo.com/*/*/ebook/*",
        "https://www.kobo.com/*/*/audiobook/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "koboprice@tertyshny.dev"
    }
  }
}
