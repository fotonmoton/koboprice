    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.8.0",
    "prettier": "3.3.2",
    "web-ext": "^8.2.0"
  },
  "dependencies": {
    "currency.js": "^2.0.4",
    "date-fns": "^3.6.0"
  }
